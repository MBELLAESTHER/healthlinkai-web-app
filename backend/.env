# Database Configuration
DATABASE_URL=mysql://root:MbellAes12%3F@localhost:3306/healthlinkai
# Alternative SQLite: sqlite:///healthlinkai.db
# Alternative PostgreSQL: postgresql://username:password@localhost:5432/healthlinkai

# Flask Configuration
FLASK_ENV=development
SECRET_KEY=your-secret-key-change-in-production-use-long-random-string
DEBUG=True

# Payment Integration (Stripe example)
PAYMENT_PUBLIC_KEY=pk_test_your_stripe_public_key_here
PAYMENT_SECRET_KEY=sk_test_your_stripe_secret_key_here

# External API Keys
OPENAI_API_KEY=your-openai-api-key-here
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# Email Configuration (SendGrid example)
SENDGRID_API_KEY=your-sendgrid-api-key-here
FROM_EMAIL=noreply@healthlinkai.com

# SMS Configuration (Twilio example)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Redis Configuration (for caching and sessions)
REDIS_URL=redis://localhost:6379/0

# Celery Configuration (for background tasks)
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Security Settings
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production
JWT_ACCESS_TOKEN_EXPIRES=3600
JWT_REFRESH_TOKEN_EXPIRES=2592000

# File Upload Settings
MAX_CONTENT_LENGTH=16777216
UPLOAD_FOLDER=uploads
ALLOWED_EXTENSIONS=jpg,jpeg,png,gif,pdf,doc,docx

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# External Services
GOOGLE_MAPS_API_KEY=your-google-maps-api-key
WEATHER_API_KEY=your-weather-api-key

# Monitoring and Analytics
SENTRY_DSN=your-sentry-dsn-for-error-tracking
GOOGLE_ANALYTICS_ID=your-google-analytics-id

# Rate Limiting
RATE_LIMIT_STORAGE_URL=redis://localhost:6379/1
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# Health Check Settings
HEALTH_CHECK_ENABLED=True
HEALTH_CHECK_PATH=/health

# CORS Settings
CORS_ORIGINS=http://localhost:3000,http://localhost:5000
CORS_ALLOW_CREDENTIALS=True

# Session Configuration
SESSION_TYPE=redis
SESSION_REDIS=redis://localhost:6379/2
SESSION_PERMANENT=False
SESSION_USE_SIGNER=True
SESSION_KEY_PREFIX=healthlinkai:

# Backup Configuration
BACKUP_ENABLED=True
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=healthlinkai-backups

# Feature Flags
ENABLE_SYMPTOM_CHECKER=True
ENABLE_MINDWELL_CHAT=True
ENABLE_PROVIDER_BOOKING=True
ENABLE_TELEHEALTH=True
ENABLE_PAYMENT_PROCESSING=True
ENABLE_SMS_NOTIFICATIONS=True
ENABLE_EMAIL_NOTIFICATIONS=True
